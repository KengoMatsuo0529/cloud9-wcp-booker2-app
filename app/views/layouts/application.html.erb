<!DOCTYPE html>
<html>
  <head>
    <title>BOOKER2</title>
    <%= csrf_meta_tags %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
          <a class="navbar-brand" href="/">
            <span>Bookers</span>
          </a>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">
             <% if user_signed_in? %>
          <li>
           <a class="fas fa-home nav-link text-light"><%= link_to "Home", user_path(current_user.id) %></a>
          </li>
          <li>
            <a class="fas fa-users nav-link text-light"><%= link_to "Users", users_path %></a>
          </li>
          <li>
            <a class="fas fa-book-open nav-link text-light"><%= link_to "Books", books_path %></a>
          </li>
          <li>
            <a class="fas fa-sign-out-alt nav-link text-light"><%= link_to "logout", destroy_user_session_path, method: :delete %></a>
          </li>
        <% else %>
          <li>
            <%= link_to "Home", "/" %>
          </li>
          <li>
            <%= link_to "About", "/" %>
          </li>
          <li>
            <%= link_to "sign up", new_user_registration_path %>
          </li>
          <li>
            <%= link_to "login", new_user_session_path %>
          </li>
        <% end %>
          </ul>
        </div>
        </div>
      </nav>
    </header>
  <main class="mb-auto">
    <%= yield %>
  </main>
  <footer class="bg-white text-black pt-5 pb-4">
      <div class="container">
        <div class="row no-gutters">
          <div class="col-md-4">
            <p>CopyRight Infratop.inc</p>
          </div>
          <div class="col-md-8">
        
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>

<h1>Books</h1>

 <% @books.each do |book| %>
<div>
    <%= link_to book_path(book.id) do %>
  <p>Title：<%= book.title %></p>
  <% end %>
  <p>Opinion：<%= book.body %></p>
</div>
<% end %>

<h1>User Info</h1>

<%= @users.each do |user| %>

<div>
<p>user画像 <%= image_tag ('sample-author1.jpg') %></p>
<p>name <%= user.name %></p>
<p>introduction <%= user.introduction %></p>
</div>

<% end %>

<h1>New Book</h1>

<%= form_with model:@book, local:true do |f| %>
<h4>Title</h4>
<%= f.text_field :title %>

<h4>Opinion</h4>
<%= f.text_field :body %>
<%= f.submit "Create Book" %>

<% end %>
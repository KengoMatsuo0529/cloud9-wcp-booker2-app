<div class="col-md-3">
  
<h2>User info</h2>
    <img class="attachment user profile_image fallback"><%= attachment_image_tag user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %></img>
    <table class="table">
      <tbody>
        <tr></tr>
        <tr>
          <th>name</th>
          <th><%= user.name if user %></th>
        </tr>
        <tr>
          <th>introduction</th>
          <th><%= user.introduction if user %></th>
        </tr>
      </tbody>
    </table>
</div>

<div class="">

<%= link_to "edit", edit_user_path(user) %>

  
</div>

<h1>New book</h1>
  <%= form_with model:book, local:true do |f| %>
    <h4>Title</h4>
  <%= f.text_field :title %>
    <h4>Opinion</h4>
  <%= f.text_field :body %>
  <%= f.submit "Create Book" %>
  <% end %>
  </div>

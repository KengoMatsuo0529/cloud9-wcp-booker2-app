<div class="col-md-3">
  
<h2>User info</h2>
    <img class="attachment user profile_image fallback"><%= attachment_image_tag user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %></img>
    <table class="table">
      <tbody>
        <tr></tr>
        <tr>
          <th>name</th>
          <th><%= user.name if user %></th>
        </tr>
        <tr>
          <th>introduction</th>
          <th><%= user.introduction if user %></th>
        </tr>
      </tbody>
    </table>


  <div class="row">
  <a class="btn btn-outline-secondary btn-block fas fa-user-cog"><%= link_to "edit", edit_user_path(user) %></a>
  </div>

  <h2 class="mt-3">New book</h2>
  <%= form_with model:book, local:true do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title, class: "form-control" %>
    <%= f.label :body %>
    <%= f.text_field :body, class: "form-control" %>
    <%= f.submit "Create Book", class: "btn btn-success" %>
  <% end %>
</div>
